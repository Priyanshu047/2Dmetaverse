{
    "name": "2d-metaverse-app",
    "version": "1.0.0",
    "description": "Full-stack 2D Metaverse Web App with React + Phaser 3 frontend and Node.js + Socket.io backend",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:server": "npm run dev --workspace=@metaverse/server",
        "dev:client": "npm run dev --workspace=@metaverse/client",
        "build": "npm run build --workspaces",
        "build:server": "npm run build --workspace=@metaverse/server",
        "build:client": "npm run build --workspace=@metaverse/client",
        "lint": "eslint . --ext .ts,.tsx",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
    },
    "keywords": [
        "metaverse",
        "2d",
        "phaser",
        "react",
        "socketio",
        "webrtc"
    ],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.16.0",
        "@typescript-eslint/parser": "^6.16.0",
        "concurrently": "^8.2.2",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "prettier": "^3.1.1",
        "typescript": "^5.3.3"
    }
}